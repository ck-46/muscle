        <div class="col-10 col-md-12 col-lg-12 mb-2 p-0">
            <form class="form-inline my-2 my-lg-0" action="{{constant('main\\Bootstrap::ENTRY_URL')}}list.php" method="post">
                <input class="form-control mr-sm-2" name="keywords" value="" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" name="search" value="検索">Search</button>
